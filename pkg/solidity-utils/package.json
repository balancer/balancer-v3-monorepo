{
  "name": "@balancer-labs/v3-solidity-utils",
  "version": "1.0.0",
  "description": "Solidity libraries and utilities",
  "license": "GPL-3.0-only",
  "homepage": "https://github.com/balancer-labs/balancer-v3-monorepo/tree/master/pkg/solidity-utils#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/balancer-labs/balancer-v3-monorepo.git",
    "directory": "pkg/solidity-utils"
  },
  "bugs": {
    "url": "https://github.com/balancer-labs/balancer-v3-monorepo/issues"
  },
  "files": [
    "contracts/**/*.sol",
    "!contracts/test/**/*.sol"
  ],
  "scripts": {
    "build": "yarn compile",
    "compile": "hardhat compile && rm -rf artifacts/build-info",
    "compile:watch": "nodemon --ext sol --exec yarn compile",
    "lint": "yarn lint:solidity && yarn lint:typescript",
    "lint:solidity": "solhint 'contracts/**/*.sol'",
    "lint:typescript": "NODE_NO_WARNINGS=1 eslint . --ext .ts --ignore-path ../../.eslintignore  --max-warnings 0",
    "test": "hardhat test",
    "gas": "REPORT_GAS=true hardhat test",
    "test:watch": "nodemon --ext js,ts --watch test --watch lib --exec 'clear && yarn test --no-compile'"
  },
  "dependencies": {
    "@balancer-labs/v3-interfaces": "workspace:*"
  },
  "devDependencies": {
    "@balancer-labs/solidity-toolbox": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "decimal.js": "^10.4.2",
    "eslint": "^8.26.0",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "hardhat": "^2.14.0",
    "lodash.frompairs": "^4.0.1",
    "lodash.pick": "^4.4.0",
    "lodash.range": "^3.2.0",
    "lodash.times": "^4.3.2",
    "lodash.zip": "^4.2.0",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "solhint": "^3.4.1"
  }
}
